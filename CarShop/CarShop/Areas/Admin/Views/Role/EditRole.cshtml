@using CarShop.BootstrapModal
@model ApplicationRoles


<section id="main-content" class="panel">
    <section class="wrapper">
        <form asp-action="Edit" method="post" id="frmBrand">
            <div class="form-horizontal">
                <div class="panel-heading">
                    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Edit Role" })
                </div>
                <div class="panel-body">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <div class="col-2">
                            <label asp-for="Name" class="control-label text-info" style="font-size: 1.3em;"></label>
                        </div>
                        <div class="col-10 mt-2">
                            <input asp-for="Name" class="form-control" autofocus="" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="col-2">
                            <label asp-for="CreatedDate" class="control-label text-info" style="font-size: 1.3em;"></label>
                        </div>
                        <div class="col-10 mt-2">
                            <input asp-for="CreatedDate" class="form-control" type="datetime" value="@Model.CreatedDate.ToString("d")" readonly />
                        </div>
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="col-2">
                            <label asp-for="Description" class="control-label text-info" style="font-size: 1.3em;"></label>
                        </div>
                        <div class="col-10 mt-2">
                            <input asp-for="Description" class="form-control" />
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
            </div>
        </form>
    </section>
</section>

@section Scripts
{
    <script>
        $.validator.unobtrusive.parse('#frmBrand')
    </script>
}
