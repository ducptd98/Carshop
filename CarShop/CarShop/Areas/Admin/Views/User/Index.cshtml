@model IEnumerable<ApplicationUsers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <!--overview start-->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-laptop"></i> List Users</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a asp-action="Index" class="btn-default">Users</a></li>
                    <li><i class="fa fa-laptop"></i>List Users</li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="offset-10 text-dark">
                <a asp-action="Create" data-toggle="modal" data-target="#modal-popUP" class="btn btn-info"><i class="fa fa-plus"></i> &nbsp; Add New User</a>
            </div>
        </div>

        <div class="row mt-2">
            <section class="panel w-100">
                <header class="panel-heading">List Users</header>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Name)</th>
                                <th>@Html.DisplayNameFor(m => m.Email)</th>
                                <th>@Html.DisplayNameFor(m => m.Gender)</th>
                                <th>@Html.DisplayNameFor(m => m.Contact)</th>
                                <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
                                <th>@Html.DisplayNameFor(m => m.Country)</th>
                                <th>@Html.DisplayNameFor(m => m.Region)</th>
                                <th>@Html.DisplayNameFor(m => m.City)</th>
                                <th>@Html.DisplayNameFor(m => m.Address)</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>
                                <td>@Html.DisplayFor(m => item.Gender)</td>
                                <td>@Html.DisplayFor(m => item.Contact)</td>
                                <td>@item.DateOfBirth.ToString("d")</td>
                                <td>@Html.DisplayFor(m => item.Country)</td>
                                <td>@Html.DisplayFor(m => item.Region)</td>
                                <td>@Html.DisplayFor(m => item.City)</td>
                                <td>@Html.DisplayFor(m => item.Address)</td>
                                <td>
                                    <a data-toggle="modal" asp-action="Edit" asp-route-id="@item.Id" data-target="#modal-popUP"
                                       class="btn btn-info">
                                        <i class="glyphicon glyphicon-pencil"></i>  Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" data-target="#modal-popUP" class="btn btn-danger">
                                        <i class="fa fa-trash-o"></i>  Delete
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
        <div aria-hidden="true" aria-labelledby="modal-popUP-label" role="dialog" tabindex="-1" id="modal-popUP" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                </div>
            </div>
        </div>
    </section>
</section>

